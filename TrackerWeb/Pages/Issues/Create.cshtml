@model TrackerWeb.Pages.Issues.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Issue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Issue.Title" class="control-label"></label>
                <input asp-for="Issue.Title" class="form-control" />
                <span asp-validation-for="Issue.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.Description" class="control-label"></label>
                <textarea asp-for="Issue.Description" class="form-control" rows="3" cols="6"></textarea>
                <span asp-validation-for="Issue.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.IssueType" class="form-label">Type</label>
                <select class="form-select"
                        asp-for="Issue.IssueType"
                        asp-items="@Html.GetEnumSelectList<TrackerWeb.Models.IssueType>()"></select>
                <span asp-validation-for="Issue.IssueType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.Priority" class="control-label"></label>
                <select asp-for="Issue.Priority"
                        asp-items="Html.GetEnumSelectList<TrackerWeb.Models.Priority>()"
                        class="form-control"></select>
                <span asp-validation-for="Issue.Priority" class="text-danger"></span>
            </div>
